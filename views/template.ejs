<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <script src="https://kit.fontawesome.com/b383873ec6.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/public/css/style.css">
  <title>NewsMedia</title>
</head>

<body>
  <!-- navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#"><i class="fas fa-2x fa-newspaper"></i></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/sports">Sports</a>
          </li>

          <li class="nav-item">
            <a class="nav-link " href="/entertainment" tabindex="-1">Entertainment</a>
          </li>
          <li class="nav-item">
            <a class="nav-link " href="/buisness" tabindex="-1">Finance&Stocks</a>
          </li>
          <li class="nav-item">
            <a class="nav-link " href="/stocks" tabindex="-1">Crypto World</a>
          </li>
        </ul>
        <form class="d-flex">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>
  <!-- nav bar -->

  <!-- News -->
  <div class="headlines">
    <h1><i>Breaking Headlines </i><span class="badge bg-danger" style="font-size: 0.4em;">NEW</span></h1>
  </div>

  <!-- Body -->

  <!-- Headlines -->
  <div class="accordion accordion-flush headlines" id="accordionFlushExample">
    <% for(let i=0;i<titles.length;i++){%>
      <% if(articles[0] !="" ) {%>
        <div class="accordion-item">
          <h2 class="accordion-header" id="flush-heading<%=len[i] %>">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
              data-bs-target="#flush-collapse<%=len[i] %>" aria-expanded="false"
              aria-controls="flush-collapse<%=len[i] %>">
              <%= titles[i] %>
            </button>
          </h2>
          <div id="flush-collapse<%=len[i] %>" class="accordion-collapse collapse"
            aria-labelledby="flush-heading<%=len[i] %>" data-bs-parent="#accordionFlushExample">
            <div class="accordion-body">
              <%=articles[i] %>
            </div>
          </div>
        </div>
        <% } %>
          <% } %>
            <!-- Headlines -->
            <!-- News -->

    <!-- footer -->
    <footer class="footer">
      <li class="Copyright">Copyright Reserved 2021-2022</li>
      <div class="footer_elements">

        <li class="ele"><i class="fab fa-instagram"></i></li>
        <li class="ele"><i class="fab fa-facebook"></i></li>
        <li class="ele"><i class="fab fa-twitter"></i></li>
        <li class="ele"><i class="fab fa-linkedin"></i></li>
        <!-- <li class="ele"></li> -->
      </div>
    </footer>
    <!-- footer -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
      crossorigin="anonymous"></script>
</body>

</html>